// sec 6 #1 flip image

import acm.program.*;
import acm.graphics.*;

public class sec6_1 extends GraphicsProgram {

	public void run() {
		GImage image = new GImage("milkmaid.jpg");
		GImage flip = flipImage(image);
		
		image.scale(.3);
		add(image);
		
		flip.scale(.3);
		add(flip, 500,500);
	}
	
	private GImage flipImage(GImage image) {
		
		return image;
	}
	
	
}
