import java.awt.*;

public class Hangman extends ConsoleProgram {
	
	private static final int LIVES = 8;
	
	
    public void run() {
		while (isGameRunning()) {
			runGame();
		}
		endGame();
	}
    
    private boolean isGameRunning() {
    	if (lives > 0) {
    		return true;
    	}
    	else {
    		return false;
    	}
    }
    
    private void runGame() {
    	
    }
    
    
    private int lives = LIVES;
    
}
